#include<iostream>
#include<stack>
using namespace std;

template<class T>
class Graph{    //无向图     
public:
    int v;      //顶点数
    int e;      //边数
    T* pair;    //键对
    T** graph;  //邻接矩阵
public:
    Graph():v(0),e(0){
        this->graph=new T*[1];
        this->pair=new T[1];
    }
    Graph(int v):v(v),e(0){
        this->graph=new T*[v];
        for(int i=0;i<v;i++){
            graph[i]=new T[v]{};
        }
        this->pair=new T[v];
    }
    int GetIdx(T t){
        for(int i=0;i<this->v;i++){
            if(pair[i]==t)
                return i;
        }
        return -1;
    }
    void Print(T** graph,int v){
        cout<<"pair"<<endl;
        for(int i=0;i<this->v;i++){
            cout<<this->pair[i]<<"\t";
        }
        cout<<"\n\ngraph"<<endl;
        for(int i=0;i<v;i++){
            for(int j=0;j<this->v;j++){
                cout<<graph[i][j]<<"\t";
            }
            cout<<"\n"<<endl;
        }
        cout<<endl;
    }
    void InsertVertex(int v){
        T* tempPair=new T[++this->v];
        T** tempGraph=new T*[this->v];
        for(int i=0;i<this->v;i++){
            tempGraph[i]=new T[this->v]{};
        }
        int idx=0;
        for(;pair[idx]<v&&idx<this->v-1;idx++){
            tempPair[idx]=this->pair[idx];
        }
        tempPair[idx]=v;
        for(int i=idx+1;i<this->v;i++){
            tempPair[i]=this->pair[i];
        }
        for(int i=0;i<this->v;i++){
            for(int j=0;j<this->v;j++){
                if(i<idx&&j<idx)
                    tempGraph[i][j]=graph[i][j];
                if(i<idx&&j>idx)
                    tempGraph[i][j]=graph[i][j-1];
                if(i>idx&&j<idx)
                    tempGraph[i][j]=graph[i-1][j];
                if(i>idx&&j>idx)
                    tempGraph[i][j]=graph[i-1][j-1];
            }
        }
        if(this->pair)
            delete[]this->pair;
        this->pair=tempPair;
        if(this->graph)
            delete[]this->graph;
        this->graph=tempGraph;
    }
    void InsertEdge(int v,int u,int l){
        graph[GetIdx(v)][GetIdx(u)]=l;
        this->e++;
    }
    void DeleteVertes(int v){
        int idx=GetIdx(v);
        for(int i=idx;i<this->v-1;i++){
            pair[i]=pair[i+1];
            for(int j=idx;j<this->v-1;j++){
                graph[i][j]=graph[i+1][j+1];
            }
        }
        this->v--;
    }
    void DeleteEdge(int v,int u){
        graph[GetIdx(v)][GetIdx(u)]=0;
        this->e--;
    }
    //最短路径：非负权值 (v->u)
    int ShortestPath(int v,int u){
        int* dist=new int[this->v]{};
        for(int i=0;i<this->v;i++){
            dist[i]=graph[v][i];
        }
        bool* tag=new bool[this->v];
        tag[v]=true;
        for(int i=0;i<this->v-2;i++){
            int u=Choose(dist,tag,this->v);
            tag[u]=true;
            for(int j=0;j<this->v;j++){
                if(!tag[j]&&graph[u][j]>0&&dist[u]+graph[u][j]<dist[j])
                    dist[j]=dist[u]+graph[u][j];
            }
            for(int j=0;j<this->v;j++){
                if(j==v)
                    continue;
                if(graph[u][j]>0&&!dist[j])
                    dist[j]=graph[u][j]+dist[u];
            }
        }
        return dist[u];
    }
    //返回未被标识已访问的最短dist的下标
    int Choose(int* dist,bool* tag,int l){
        int idx;
        for(int i=0;i<l;i++){
            if(!tag[i]&&dist[i]>0){
                idx=i;
                break;
            }
        }
        for(int i=idx+1;i<this->v;i++){
            if(!tag[i]&&dist[i]>0)
                idx=dist[idx]<dist[i]?idx:i;
        }
        return idx;
    }
};

int main(){
    Graph<int> g;
    for(int i=0;i<=5;i++){
        g.InsertVertex(i);
    }
    g.InsertEdge(0,1,50);
    g.InsertEdge(0,3,10);
    g.InsertEdge(0,2,45);
    g.InsertEdge(3,0,20);
    g.InsertEdge(3,4,15);
    g.InsertEdge(1,3,15);
    g.InsertEdge(4,1,20);
    g.InsertEdge(5,4,3);
    g.InsertEdge(4,2,35);
    g.InsertEdge(2,4,30);
    g.InsertEdge(1,2,10);
    g.Print(g.graph,g.v);
    cout<<"最短路径："<<g.ShortestPath(0,1);
    return 0;
}
